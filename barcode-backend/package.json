{
  "name": "barcode-backend",
  "version": "1.0.0",
  "description": "Backend API for Barcode Scanner application",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "node src/test-db.js",
    "test:cors": "node test-cors.js",
    "init-db": "node -e \"import('./src/config/database.js').then(db => db.initializeDatabase())\"",
    "stats": "node -e \"import('./src/config/database.js').then(db => db.getDatabaseStats())\""
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.50.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "node-fetch": "^3.3.2"
  },
  "keywords": [
    "barcode",
    "scanner",
    "api",
    "supabase",
    "express"
  ],
  "author": "Your Name",
  "license": "ISC"
}
